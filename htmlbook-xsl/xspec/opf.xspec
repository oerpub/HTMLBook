      <x:scenario label="that does not have a data-type">
	<x:context mode="opf.id">
	  <div/>
	</x:context>
	<x:expect label="An id value should be generated that contains the element local-name if it has no data-type" test="contains(., 'div')"/>
      </x:scenario>
